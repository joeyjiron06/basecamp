<script>
  function addMarqueeAnimation() {
    const marqueeElements = document.querySelectorAll('.marquee');

    marqueeElements.forEach((marquee) => {
      const list = marquee.querySelector('ul');
      if (list) {
        const listItems = list.querySelectorAll('li');

        listItems.forEach((item) => {
          const itemCopy = item.cloneNode(true) as HTMLLIElement;
          itemCopy.setAttribute('aria-hidden', 'true');
          list.appendChild(itemCopy);
        });
      }
    });
  }

  // If a user hasn't opted in for recuded motion, then we add the animation
