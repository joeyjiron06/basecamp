  .section {
    @apply container px-6 mx-auto;
  }

  .element-tag {
    @apply px-4 py-2 bg-brand-300 text-brand-950 rounded border-b-8 border-b-brand-700 cursor-pointer;
  }
  .bento-card {
    @apply px-3 py-6 bg-surface-200 dark:bg-surface-900 rounded;
  }
</style>
