      <span class='element-tag'>ul</span>
    </div>

    <div class='overflow-x-scroll flex gap-2 items-start'>
      <span class='element-tag'>accordion</span>
      <span class='element-tag'>body</span>
      <span class='element-tag'>button</span>
      <span class='element-tag'>checkbox</span>
      <span class='element-tag'>dropdown</span>
      <span class='element-tag'>input</span>
      <span class='element-tag'>header</span>
      <span class='element-tag'>footer</span>
      <span class='element-tag'>modal</span>
      <span class='element-tag'>radio</span>
      <span class='element-tag'>select</span>
      <span class='element-tag'>switch</span>
